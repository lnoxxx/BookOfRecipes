<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/addFragment">

    <fragment
        android:id="@+id/ingredientsFragment"
        android:name="com.example.bookofrecipes.fragmenst.IngredientsFragment"
        android:label="Ингредиенты"
        tools:layout="@layout/fragment_ingredients" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.bookofrecipes.fragmenst.CategoriesFragment"
        android:label="Категории"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.bookofrecipes.fragmenst.AddFragment"
        android:label="Добавить рецепт"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_choseIngredientFragment"
            app:destination="@id/choseIngredientFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.bookofrecipes.fragmenst.RecipesFragment"
        android:label="Список рецептов"
        tools:layout="@layout/fragment_recipes" />
    <fragment
        android:id="@+id/choseIngredientFragment"
        android:name="com.example.bookofrecipes.fragmenst.ChoseIngredientFragment"
        android:label="Выбор ингредиентов"
        tools:layout="@layout/fragment_chose_ingredient" />
</navigation>