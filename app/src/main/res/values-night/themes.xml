<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookOfRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/aler_background_dark</item>
        <item name="android:buttonBarButtonStyle">@style/CustomAlertDialogButtonStyle</item>
    </style>

    <style name="CustomAlertDialogButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@color/md_theme_dark_primary</item>
        <item name="android:text">Button"</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
    </style>
</resources>