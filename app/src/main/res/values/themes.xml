<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookOfRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/BackgroundWhite</item>
        <item name="android:statusBarColor">@color/BackgroundWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/alert_background</item>
        <item name="android:buttonBarButtonStyle">@style/CustomAlertDialogButtonStyle</item>
    </style>

    <style name="CustomAlertDialogButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="backgroundTint">@color/green</item>

        <item name="android:text">Button"</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/button_selector</item>
        <item name="itemTextColor">@drawable/button_selector</item>
        <item name="itemActiveIndicatorStyle">@style/CustomIndicatorStyle</item>
    </style>

    <style name="CustomIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="Theme.BookOfRecipes" parent="Base.Theme.BookOfRecipes" />

</resources>